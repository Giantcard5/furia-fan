generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

datasource db {
  provider = "mysql"
  url      = "mysql://furia:furia123@localhost:3306/furia_fan"
}

model Event {
  id         Int      @id @default(autoincrement())
  title      String
  type       String
  date       DateTime
  time       String
  location   String
  image      String?
  attendees  Int
  game       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Game {
  id          Int     @id @default(autoincrement())
  name        String
  image       String
  description String
  teams       Int
  players     Int
  tournaments Int
}

model Shop {
  id           Int     @id @default(autoincrement())
  title        String
  category     String
  price        Decimal @db.Decimal(10, 2)
  oldPrice     Decimal? @db.Decimal(10, 2)
  discount     Int?
  rating       Decimal? @db.Decimal(3, 2)
  ratingCount  Int?
  image        String
  tag          String?
  availability String
  productLink  String
}

model Team {
  id          Int       @id @default(autoincrement())
  name        String
  image       String
  description String
  players     Player[]
  stats       Stat[]
}

model Player {
  id      Int    @id @default(autoincrement())
  name    String
  role    String
  image   String
  teamId  Int
  team    Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model Stat {
  id      Int    @id @default(autoincrement())
  value   Int
  label   String
  teamId  Int
  team    Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model User {
  id             Int            @id @default(autoincrement())
  cpf            String         @unique
  email          String         @unique
  fullName       String
  username       String         
  password       String
  address        String
  city           String
  state          String
  zipCode        String
  phoneNumber    String
  birthDate      DateTime
  profileImage   String?
  platform       String
  playFrequency  String

  settings       UserSettings?
  games          GamePreference[]
  events         EventPreference[]
  purchases      Purchase[]
  documents      Document?
  socialMedia    SocialMedia?
}

model UserSettings {
  id               Int     @id @default(autoincrement())
  cpf              String  @unique
  language         String
  emailNotifications Boolean
  pushNotifications Boolean
  marketingEmails   Boolean
  eventReminders    Boolean

  user             User   @relation(fields: [cpf], references: [cpf], onDelete: Cascade)
}

model GamePreference {
  id      Int    @id @default(autoincrement())
  name    String
  userId  Int
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EventPreference {
  id      Int    @id @default(autoincrement())
  name    String
  userId  Int
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Purchase {
  id      Int    @id @default(autoincrement())
  name    String
  userId  Int
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Document {
  id             Int    @id @default(autoincrement())
  idDocument     String
  selfieWithId   String
  userId         Int    @unique
  user           User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SocialMedia {
  id        Int    @id @default(autoincrement())
  twitch    String?
  discord   String?
  HLTV      String?
  userId    Int    @unique
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}